<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">

    <title>{% if title %}{{ title }}{% endif %}</title>
    <meta name="author" content="svi framework">

    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('base/css/base.css') }}">
</head>

<body>
    <header>
        <div class="container">
            <a class="logo" href="/"></a>
        </div>
    </header>
    <nav>
        <ul class="container">

        </ul>
    </nav>
    <main>
        <div class="container">
            <h1>{{ title }}</h1>
            {% if alerts %}
                {% for a in alerts %}
                    <div class="alert alert-{{ a.type }} alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                        {{ a.text }}
                    </div>
                {% endfor %}
            {% endif %}
            {% block content %}{% endblock %}
        </div>
    </main>
</body>
</html>